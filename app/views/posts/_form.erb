<% content_for :page_title, "Dodaj nowego posta" %>


<div class='section'>

<%= simple_form_for @post do |f| %>

<div class='field'>
    <div class='control'>
        <%= f.input :tytuł, input_html: { class: 'input'}, wrapper: false, label_html: { class: 'label'} %>
    </div>
</div>

<div class='field'>
    <div class='control'>
        <%= f.input :tekst, input_html: { class: 'textarea'}, wrapper: false, label_html: {class: 'label'} %>
    </div>
</div>

<%= f.button :submit, "Utwórz nowego posta", class: 'button is-info' %>

<% end %>

</div>