<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<br>
<div class="field">
  <div class="control">
    <%= f.input :nazwa, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :komentarz, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
  </div>
</div>
<%= f.button :submit, 'Zostaw komentarz', class: "button is-primary" %>
<% end %>