<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="content">
                <p>
                  <strong>  <%= comment.nazwa + ":" %> </strong>
                  <%= comment.komentarz %>
                 </p>
            </div>
        </div>
        <%= link_to 'Usuń komentarz', [comment.post, comment], method: :delete, class: "button is-danger", data: {confirm: "Na pewno usunąć ten komentarz?"} %>
    </article>
</div>